<div class="container">
  <div class="row">
    <div class="col-md-6 border border-dark">
      <h2 class="mt-3">New post</h2>
      <h4 class="mt-3">【Information】</h4>
      <%= form_with model: @destination do |f| %>
      <div class="form_group">
        <%= f.label :spot_name %>
        <%= f.text_field :spot_name, class: 'form-control spot_name' %>
      </div>

      <div class="form_group">
        <%= f.label :image %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div class="form-group">
        <%= f.label :spot_introduction %>
        <%= f.text_area :spot_introduction, class: 'form-control spot_introduction' %>
      </div>

      <div class="form_group">
        <%= f.label :prefecture %>
        <%= f.select :prefecture, Destination.destination_areas.keys, {} %>
      </div>

      <div class="form_group">
        <%= f.label :city %>
        <%= f.text_field :city, class: 'form-control city' %>
      </div>

      <h4 class="mt-3">【How to go?】</h4>
      <div class="form_group">
        <%= f.label :transportation %>
        <%= f.text_field :transportation, class: 'form-control transportation' %>
      </div>

      <div class="form_group">
        <%= f.label :route %>
        <%= f.text_area :route, class: 'form-control route' %>
      </div>
    </div>

    <div class="col-md-6 border border-dark">
      <h4 class="mt-3">【Where to stay?】</h4>
      <div class="form_group">
        <%= f.label :hotel %>
        <%= f.text_field :hotel, class: 'form-control hotel' %>
      </div>

      <h4 class="mt-3">【Payment method】</h4>
      <div class="form_group">
        <%= f.label :For_the_transportations %>

      </div>

      <div class="form_group">
        <%= f.label :At_the_destination %>

      </div>

      <div class="form_group">
        <%= f.label :At_the_hotel %>

      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
